{
  "name": "link-snap",
  "version": "0.5.7",
  "private": true,
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "npm run dev --prefix server",
    "client": "npm run dev --prefix client",
    "install:all": "npm install && npm install --prefix server && npm install --prefix client",
    "build": "npm install --prefix client && npm run build --prefix client && npm install --prefix server",
    "prod": "npm run start:prod --prefix server",
    "start": "cd server && npm start",
    "postinstall": "npm run build",
    "sync:version": "node scripts/sync-version.js",
    "bump:patch": "node scripts/sync-version.js patch",
    "bump:minor": "node scripts/sync-version.js minor",
    "bump:major": "node scripts/sync-version.js major"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
