# ===========================================
# Link Snap - Koyeb Environment Variables
# ===========================================
# Copy these to your Koyeb service environment variables

# Server Configuration
PORT=8000
NODE_ENV=production

# MongoDB (use your MongoDB Atlas connection string)
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/linksnap?retryWrites=true&w=majority
USE_LOCAL_DB=false

# JWT Secrets (generate secure random strings!)
# Use: openssl rand -base64 32
JWT_ACCESS_SECRET=your_secure_access_secret_here
JWT_REFRESH_SECRET=your_secure_refresh_secret_here

# Client URL (your Koyeb app URL)
CLIENT_URL=https://your-app-name.koyeb.app

# Cookie Settings
# Use 'strict' for permanent domain (most secure)
# Use 'lax' if having cookie issues
COOKIE_SAMESITE=strict

# Email Encryption Key (MUST be exactly 32 characters)
ENCRYPTION_KEY=YourSecure32CharacterKeyHere!!

# Optional: Email Configuration (for password reset, verification emails)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
